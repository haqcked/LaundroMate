<div class="container p-4">
  <h1>Pick your most convenient dates</h1>

  <%= form_for (@booking) do |f| %>
    <p>
      <%= f.label :pickup_date %><br>
      <%= f.date_field :pickup_date, required: true, autofocus: true %>
      <%= f.time_field :pickup_date, required: true, autofocus: true %>
    </p>
    <p>
      <%= f.label :delivery_date %><br>
      <%= f.date_field :delivery_date, required: true, autofocus: true %>
      <%= f.time_field :delivery_date, required: true, autofocus: true %>
    </p>
    <p>
      <%= f.submit "Confirm date", class: "btn btn-success" %>
    </p>
  <% end %>
</div>
