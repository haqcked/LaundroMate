<div class="container p-4">
  <h2>My Bookings (index)</h2>

  <% @bookings.each do |booking| %>
    <p>Name: <%= booking.user.nickname %></p>
    <p>Email: <%= booking.user.email %></p>
    <p>Services: </p>
    <ul>
      <% booking.line_items.each do |item| %>
      <li><%= item.service.name %></li>
      <% end %>
    </ul>
  <hr>
  <% end %>
</div>
