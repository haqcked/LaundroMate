<div class="banner-profile">
  <div class="container p-4">
  <h1 class="text-white">My Profile</h1>
  <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12 mx-auto">
    <div class="card rounded-4 p-4 my-5">
      <div class="row">
        <div class="col-md-4 p-4">
          <% if @user.photo.key.present? %>
            <%= cl_image_tag @user.photo.key,  class: "img-fluid rounded-start" %>
          <% else %>
            <img src="https://res.cloudinary.com/dzh4zrfev/image/upload/v1678463694/avatar-asset.png", class="img-fluid rounded-start", alt="default image">
          <% end %>
        </div>
        <div class="col-md-8">
          <div class="card-body p-2">
            <h5><%= @user.nickname.upcase %></h5>
            <p class="card-text"><i class="fa-regular fa-address-card"></i> <%= @user.first_name.capitalize %> <%= @user.last_name.capitalize %></p>
            <p class="card-text"><i class="fa-regular fa-envelope"></i> <%= @user.email %></p>
            <p class="card-text"><i class="fa-solid fa-map-pin"></i> <%= @user.address %></p>
          </div>
        </div>
        <div class="text-center p-3">
          <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-outline-primary"%>
          <%= link_to "Delete Account",
          registration_path(@user), class: "btn btn-outline-danger",
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        </div>
      </div>
    </div>
  </div>
  </div>
</div>
